<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_height="wrap_content" android:layout_width="fill_parent"
	android:id="@+id/list_header">

	<TextView android:id="@+id/local_highscore_place"
		android:layout_width="60dp" android:layout_height="wrap_content"
		android:text="Place" android:layout_marginLeft="10dp"
		android:gravity="center_vertical|center_horizontal" android:textSize="15dp" />
	<TextView android:id="@+id/local_highscore_name"
		android:layout_height="wrap_content" android:text="Name"
		android:layout_width="140dp" android:layout_toRightOf="@+id/local_highscore_place"
		android:gravity="center_vertical|center_horizontal" android:textSize="15dp" />
	<TextView android:id="@+id/local_highscore_turns"
	android:layout_width="70dp" android:layout_height="wrap_content"
	android:text="Correct" android:layout_toRightOf="@+id/local_highscore_name"
	android:gravity="center_vertical|center_horizontal" android:textSize="15dp" />
</RelativeLayout>